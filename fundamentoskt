    var nome2 = " laura"
    var idade = 21
    var cidade = "Boston"
    
  
    
    println("Em um belo dia chuvoso,")
    
    

} 
//--------------------------------------------------------------------------------
fun main() {
    // concatenação
    // 
    /*
   var bolinha = "Michel Havckson"
    
    println("o nome da bolinha do kilyan mbappé é $bolinha")
    println("o nome da bolinha do kilyan mbappé é" + bolinha)
    
    var leclerc = 2
    var alonso = 1
    
    
    println("a posição do lek lek + a posição do alonso são ${(leclerc + alonso)}")
    
    println("a posição do lek lek + a posição do alonso são" +  (leclerc + alonso))
    
    
    var nome = "Laura"
    var idade = 14
    var cidade = "São Paulo"
    
    println("o meu nome é $nome, eu tenho $idade anos e moro em $cidade")
    */
    //Exercício - faça um diálogo de 15 linha, nele deve conter,
    //os nomes de quem estão falando de forma concatenada usando variaveis
    //use a criatividade 
    //
    var nome =  "bruna"
    var nome2 = "laura"
    
   
    
    println("$nome - bom dia amg")
    println("$nome2 - bom diia")
    println("$nome - tudo bem?")
    println("$nome2 - ta td bem sim e cntg?")
    println("$nome - to beem, vc fez o trabalho de português?")
    println("$nome2 - fiz nada fia")
    println("$nome - mas vc ta qrd fzr ou n?")
    println("$nome2 - qrr mesmo eu n qro, vc vai fzr?")
    println("$nome - yes baby, mas nao vou fzr agr, qnd eu chegar em casa e faço ")
    println("$nome2 - ah ent qnd vc chegar me avisa q eu vou na sua casa e a gnt faz jnt")
    println("$nome - ta boom, aproveita p dormir aq")
    println("$nome2 - vou ver se dá e te aviso")
    println("$nome - ta boom, to indo p casa")
    println("$nome2 - tchaau até mais tarde")
    println("$nome - tchaau, até")
    
            
    
 

}
//------------------------------------------------------------------------------------------------------------------------------------------------
fun main() {
    

 //operadores matemáticos
 
 // + -> adição
 // - -> subtração
 // / -> divisão
 // * -> multiplicação
 // % -> módulo
 /*
 var halls = 7
 var freegells = 6

 println (halls / freegells)

 
 
 // EXERCÍCIO - faça uma calculadora que contenha cada um dos operadores matemáticos 
 // como resutado do calculo de duas variaveis (contendo resultado para +, -, /, * e %)
 //contendo também uma interface simples e bem bonita:)
 */
  
  var Luiz = 50
  var Leo = 30
  var Eduardo = 10
  var larissa = 80
  var Valeria = 8
  
  
    
  println("alguns alunos estavam em prova para passar de serie pois estavam de recuperação, eles tiham")
  println("que resolver o seguinte cálculo:Luis mais Leo é igual Larissa,Larissa dividido por Eduardo é igual à")
  println("Valeria e Leo multiplicado por Leo é igual à:")
  println(" a) 140")
  println(" b) 240")
  println(" c) 320")
  println(" d) 425")


//--------------------------------------------------------------------------------------------------------------------
fun main() {
    

 //operadores matemáticos
 
 // + -> adição
 // - -> subtração
 // / -> divisão
 // * -> multiplicação
 // % -> módulo
 /*
 var halls = 7
 var freegells = 6

 println (halls / freegells)

 
 
 // EXERCÍCIO - faça uma calculadora que contenha cada um dos operadores matemáticos 
 // como resutado do calculo de duas variaveis (contendo resultado para +, -, /, * e %)
 //contendo também uma interface simples e bem bonita:)
 */
  /*
  var Luiz = 50
  var Leo = 30
  var Eduardo = 10
  var larissa = 80
  var Valeria = 8
  
  
    
  println("alguns alunos estavam em prova para passar de serie") 
  println("pois estavam de recuperação, eles tiham")
  println("que resolver o seguinte cálculo:")
  println("Luis mais Leo é igual Larissa,Larissa dividido por Eduardo é igual à")
  println("Valeria e Leo multiplicado por Leo é igual à:")
  println(" a) 140")
  println(" b) 240")
  println(" c) 320")
  println(" d) 425")
  */
    
    
    
   // Operadores Relacionais
   //
   // == -> igual a...
   // != -> diferente dee...
   // !  -> negando valor
   // >  -> maior que...
   // <  -> menor que...
   // >= -> maior ou igual...
   // <= -> menor ou igual a...
   // 
   // 
   // ++  -> adiciona 1 a um valor
   // --  -> subtrai 1 de um valor
   // +=  -> adiciona um determinado valor de um valor
   // -=  -> subtrai um determinado valor de um valor
   
   /*
   var clauldetty = 50 
   var josias = 30
   var berennice = 90
   var bernnadetthy = 80 
   
   println(clauldetty)
   clauldetty++
   println(clauldetty)
   println(josias)
   josias-- 
   println(josias)
   println("")
   println(berennice)
   berennice += clauldetty
   println(berennice)
   println("")
   println(bernnadetthy)
   bernnadetthy -= josias
   println(bernnadetthy)
   */
    
   // condições  if..else
   
   //se...senão
   //
   // estrutura:
   // 
   // if...else simples
   // 
   // if(condição){
   // ação
   // }else{
   // ação
   // }
   /*
   var interruptor = false 
    
   if(interruptor == true){
       println("Luz acesa") 
   }else{
       println("Luz apagada")
    
   
   }
   */
    
    var fome = true
    
    if(fome){
        println("alimente-se")
    }else{
        println("alimentou-se")

    }
        
        
}
   //''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''
   
   fun main() {
    

 //operadores matemáticos
 
 // + -> adição
 // - -> subtração
 // / -> divisão
 // * -> multiplicação
 // % -> módulo
 /*
 var halls = 7
 var freegells = 6

 println (halls / freegells)

 
 
 // EXERCÍCIO - faça uma calculadora que contenha cada um dos operadores matemáticos 
 // como resutado do calculo de duas variaveis (contendo resultado para +, -, /, * e %)
 //contendo também uma interface simples e bem bonita:)
 */
  /*
  var Luiz = 50
  var Leo = 30
  var Eduardo = 10
  var larissa = 80
  var Valeria = 8
  
  
    
