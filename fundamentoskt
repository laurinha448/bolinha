

fun main() {
    // concatenação
    // 
    /*
   var bolinha = "Michel Havckson"
    
    println("o nome da bolinha do kilyan mbappé é $bolinha")
    println("o nome da bolinha do kilyan mbappé é" + bolinha)
    
    var leclerc = 2
    var alonso = 1
    
    
    println("a posição do lek lek + a posição do alonso são ${(leclerc + alonso)}")
    
    println("a posição do lek lek + a posição do alonso são" +  (leclerc + alonso))
    
    
