              0 ->{println("aparelho desligando!")}
     }
       bateria--  
          
     }
       */   
      //uma determinada ação será executada, ENQUANTO uma determinada condição for 
      //verdadeira 
      
      //estrutura:
      //
      //do{
      //ação
      //}while(condição) 
      //
      /*
      var contador =9
      
      do{
         println(contador++)
      }while(contador > 10)
       
      
      //for - para...
      //
      //PARA cada item em um intervalo ou colection, uma determinada ação será executada 
      //estrutura:
      //
      //for(vAuxiliar in intervalo ou colection)
      //ação
      //}
      //
      
    
      for(pneu in 1..4){
          println("1 pneu")
      }
      for(contador in 0..3){
          println(contador + 1)
         
      }
     */
      /*
     //exercício -> faça uma tabuada até o décimo multiplo de um número escolhido, 
     //utilizando o laço for
     //em excessão as tabuadas do 0, 1 e 2
        
     for(calc in 0..10){
        println(calc * 7)
        
     }   
       */ 
        
        //colections
        //
        //intervalos, lista, arrays, vetores etc
        
        //tipos de listas
        //
        var list1 = listOf("tartaruga",  0, 0.1, true)
        
        //prpiedades das collections
        println(list1) //exibir a lista
        println(list1.size) //retorna o tamanho da lista
        println(list1.lastIndex) //retornar o último index
        println(list1[2]) // exibir o valor de um determinado index
        println(list1.contains("tartaruga")) //compara se existe um determinado valor dentro da lista
        println(list1.indexOf(0)) //indica o index de um determinado valor
        println(list1.lastIndexOf(0.1)) //indica o último de um eterminado valor
        println(list1.first()) //o valor do primeiro index
        println(list1.last()) //o valor do último index
        println(list1.isEmpty()) //compara se a lista está vazia 
        
        
        //<tags> 
        var list2 = listOf<String>("Lebrom james,", "Sthephen Curry", "Michel Jordan", "perna Longa", "Klay Thompson")
        // lista acima especifíca o tipo e dados que vai ser guardado
        // 
        // obs. listOf() ->imutável
        // proxima aula...mutableListOf()
        
        
        
        
        
        
        
}
 
