           println("isso é um teste, testando, testando")
      
       }
       
       
       // exercício -> faça um programa com auxílio de uma variavel contador,
       // na qual nela será acrescentado 1 a cada repetição,
       // até que dê a quantidade de vezes decidida
       
       
       var contador = 5 
       var repetir = 0
      	repeat(contador){
           repetir++ 
            println("Contador $repetir")
        
       
        var contador = 0
        repeat(10){
            println(contador++)
       
       
     */
     
     //laço while - enquanto 
     //
     //enquanto uma condiçãofor verdadeira, uma determinada ação estará sendo executada
     //estrutura do while
     //
     //while(condição){
     //ação
     //}
     var contador = 0
     while(contador < 10){
         println(contador++) 
         
         
         
         
